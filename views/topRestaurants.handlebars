<h1>人氣餐廳</h1>
<hr />
<div class="container col-md-8">

  {{#each restaurants}}
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-5 position-relative">
        <span class="badge badge-warning position-absolute"
            style="font-size: 2em; top:-5px;left:-1px">{{this.rank}}</span>
        <a href="/restaurants/{{this.id}}">
          <img class="" src="{{this.image}}" width="286px" height="180px">
        </a>
      </div>

      <div class="col-md-7 position-relative">
        <div class="card-body">
          <h3>{{this.name}}</h3>
          <span class="badge badge-secondary">收藏數：{{this.FavoritedCount}}</span>
          <p>{{this.description}}</p>
          <div class="row mt-3 ml-3">
            <div class="row mr-3">
              <a href="/restaurants/{{this.id}}" class="btn btn-primary">Show</a>
            </div>

            {{#if this.isFavorited}}
            <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents">
              <button type="submit" class="btn btn-danger">移除最愛</button>
            </form>
            {{else}}
            <form action="/favorite/{{this.id}}" method="POST" style="display: contents">
              <button type="submit" class="btn btn-primary">加到最愛</button>
            </form>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
